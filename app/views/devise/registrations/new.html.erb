<div class="row devise">
  <div class="col-sm-6 col-sm-offset-3  col-xs-8 col-xs-offset-2">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name, required: true, autofocus: true %>
        <%= f.input :surname, required: true %>
        <%= f.input :email, required: true %>
        <%= f.input :avatar, as: :file %>
        <%= f.input :height, required: true, label: "Height (cm)" %>
        <%= f.input :weight, required: true, label: "Weight (kg)" %>
        <%= f.input :age, required: true %>
        <%= f.input :activity, required: true, label: "Your daily activity. If you only work choose sedentary. If you train for 30-60 easy activity every day choose Low. If you have about 60 min moderate activity choose Medium. If you are more active in your day choose High. :", :collection => ["Sedentary","Low","Medium","High"] %>
        <%= f.input :goals, required: true, label: "Your diet goals" ,:collection => ["Lose Weight","Maintain Weight", "Add some weight"] %>
        <%= f.input :sex, required: true, :collection => ["Male","Female"], label:"Gender" %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
