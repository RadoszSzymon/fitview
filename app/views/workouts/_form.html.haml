= simple_form_for(@training, html: { class: 'form-horizontal' }) do |f|
	= f.input :date, label: "Date"
	= f.input :workout, label: "What training?", input_html: { class: "form-control" }
	= f.input :mood, label: "Your mood", input_html: { class: "form-control" }
	= f.input :weather, label: "Weather:", input_html: { class: "form-control" }
	= f.input :intensity, label: "Intensity(write High, Normal or Low):", input_html: { class: "form-control" }
	= f.input :length, label: "Time in minutes:", input_html: { class: "form-control" }
	= f.input :distance, label: "Distance in kilometers:", input_html: { class: "form-control" }
	%br/
	= f.button :submit